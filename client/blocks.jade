template(name='voting_full')
    .ui.header 
        +i name='elections'
        |voting
    if points
        strong #{points}
    .ui.icon.compact.small.button.upvote(class=upvote_class title='upvote')
        +i name='thumb-up' classes='ui avatar image'
    .ui.icon.compact.small.button.downvote(title='downvote' class=downvote_class)
        +i name='thumbs-down' classes='ui avatar image'
    if upvoter_ids
        .ui.small.header upvoters
        each upvoter_ids
            +user_info
    if downvoter_ids
        .ui.small.header downvoters
        each downvoter_ids
            +user_info



