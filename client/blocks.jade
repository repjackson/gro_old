template(name='comments')
    .ui.fluid.accordion
        .active.title
            .ui.grey.header
                +i name='chat'
                |comments
                //- +i name='lock'
                //- |private chat
        .active.content
            if currentUser
                .ui.fluid.icon.input
                    i.plus.icon
                    input.add_comment(model='text' placeholder='add...')
            .ui.comments
                each doc_comments
                    .comment
                        .content
                            .ui.header #{body}
                            .meta #{when}
                            .actions
                                +voting
                                +remove_button


